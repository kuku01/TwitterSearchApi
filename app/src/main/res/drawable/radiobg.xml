            android:shape="rectangle">
            <corners android:radius="0dp" />
            <solid android:color="@android:color/holo_blue_dark" />
            <stroke
                android:width="1dp"
                android:color="@android:color/holo_blue_dark" />

        </shape>
    </item>
    <item >
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="0dp" />
